{
  "extends": [
    "tslint:latest",
    "tslint-react",
    "tslint-eslint-rules",
    "tslint-config-prettier"
  ],
  "rulesDirectory": ["tslint-plugin-prettier"],
  "defaultSeverity": "warning",
  "linterOptions":{
    "exclude":[
      "node_modules/**/*.ts",
      "node_modules/**/*.js",
      "dist/**/*.ts",
      "dist/**/*.js"
    ]
  },
  "rules": {
    "prettier": true,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "jsx-no-lambda": false,
    "no-console": false,
    "no-debugger": false
  }
}